@model IEnumerable<rthowell.net__ASP_MVC_.Models.BulletInfo>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>User Bullet Data<br></h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Bullet Manufacturer
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Caliber)
        </th>
        <th>
            Weight (grains)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Mfg)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Caliber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Weight)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.BulletId }) |
            @Html.ActionLink("Details", "Details", new { id=item.BulletId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.BulletId })
        </td>
    </tr>
}

</table>
